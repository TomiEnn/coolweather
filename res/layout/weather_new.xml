<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/weather_content_background" >

        <ImageView
            android:id="@+id/new_info_image"
            android:layout_width="174dp"
            android:layout_height="174dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:src="@drawable/jqwy_normal" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_info_image"
            android:layout_marginTop="80dp" >

            <RelativeLayout
                android:id="@+id/new_icon_rl_1"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_marginLeft="40dp" >

                <ImageView
                    android:id="@+id/new_image_1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/w3" />

                <TextView
                    android:id="@+id/new_text_1"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal"
                    android:lines="1"
                    android:ellipsize="marquee"
                    android:layout_below="@id/new_image_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="#FFF"
                    android:textSize="22sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/new_icon_rl_2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/new_icon_rl_1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp" >

                <TextView
                    android:id="@+id/new_text_up_2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="23"
                    android:textColor="#FFF"
                    android:textSize="72sp"
                    android:textStyle="bold" />
  
                <TextView
                    android:id="@+id/new_text_down_2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@id/new_text_up_2"
                    android:gravity="center_horizontal"
                    android:lines="1"
                    android:ellipsize="marquee"
                    android:layout_below="@id/new_text_up_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="#FFF"
                    android:textSize="21sp" />
        
	  </RelativeLayout>
            <RelativeLayout
                android:id="@+id/new_icon_rl_3"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_alignLeft="@+id/new_icon_rl_1"
                android:layout_below="@+id/new_icon_rl_1"
                android:layout_marginTop="40dp" >

                <ImageView
                    android:id="@+id/new_image_3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/pm25_1" />

                <TextView
                    android:id="@+id/new_text_down_3"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal"
                    android:lines="1"
                    android:ellipsize="marquee"
                    android:layout_below="@id/new_image_3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="#FFF"
                    android:textSize="22sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/new_icon_rl_4"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_alignBottom="@id/new_icon_rl_3"
                android:layout_alignLeft="@id/new_icon_rl_2" >

                <ImageView
                    android:id="@+id/new_image_4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/windy_7" />

                <TextView
                    android:id="@+id/new_text_4"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal"
                    android:lines="1"
                    android:ellipsize="marquee"
                    android:layout_below="@id/new_image_4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="#FFF"
                    android:textSize="22sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/new_icon_rl_5"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_alignLeft="@id/new_icon_rl_3"
                android:layout_below="@id/new_icon_rl_3"
                android:layout_marginTop="40dp" >

                <ImageView
                    android:id="@+id/new_image_5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/humidity_40" />

                <TextView
                    android:id="@+id/new_text_5"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal"
                    android:lines="1"
                    android:ellipsize="marquee"
                    android:layout_below="@id/new_image_5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="#FFF"
                    android:textSize="22sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/new_icon_rl_6"
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:layout_alignBottom="@id/new_icon_rl_5"
                android:layout_alignLeft="@id/new_icon_rl_4" >

                <ImageView
                    android:id="@+id/new_image_6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/wic_clear_n" />

                <TextView
                    android:id="@+id/new_text_6"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal"
                    android:lines="1"
                    android:ellipsize="marquee"
                    android:layout_below="@id/new_image_6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="#FFF"
                    android:textSize="22sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>