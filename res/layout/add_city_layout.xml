<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent" 
    android:background="@color/slide_layout_background">
    
	<RelativeLayout 
	    android:id="@+id/select_city_rl"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:layout_marginTop="50dp"
	    >
	    <TextView 
	        android:id="@+id/add_layout_show_city"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"
	        android:layout_toLeftOf="@id/add_layout_tv_show_weather"
	        android:text="番禺"
	        android:textSize="25sp"
	        android:textColor="#FFF"
	        />
	    
	    <TextView 
	        android:id="@+id/add_layout_tv_show_weather"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:layout_marginRight="50dp"
	        android:layout_alignParentRight="true"
	        android:background="@color/weather_content_background"
	        />
	</RelativeLayout>
</RelativeLayout>
