<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/weather_item_black"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/weather_main_rl"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="4dp"
            android:background="#FC9D5B" >

            <TextView
                android:id="@+id/weather_main_temp_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/weather_item_w"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/weather_main_allday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/weather_main_temp_today"
                android:layout_below="@id/weather_main_temp_today"
                android:layout_marginTop="2dp"
                android:textColor="@color/weather_item_z"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/weather_main_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/weather_main_allday"
                android:layout_below="@id/weather_main_allday"
                android:layout_marginTop="2dp"
                android:textColor="@color/weather_item_w"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/weather_main_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/weather_item_z"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/weather_main_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/weather_main_local"
                android:layout_below="@id/weather_main_local"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/pulish_time"
                android:drawablePadding="5dp"
                android:textColor="@color/weather_item_z"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/weather_main_image"
                android:layout_width="150dp"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/cloud" />

            <TextView
                android:id="@+id/weather_main_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:textColor="@color/weather_item_z"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/weather_main_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="8dp"
                android:clickable="true"
                android:src="@drawable/weather_main_refresh" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/weather_item_y" >

            <include layout="@layout/weather_item" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/weather_item_th" >

            <include layout="@layout/weather_item" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/weather_item_b" >

            <include layout="@layout/weather_item" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/weather_item_o" >

            <include layout="@layout/weather_item" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/weather_item_z" >

            <include layout="@layout/weather_item" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>